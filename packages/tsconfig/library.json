{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noUnusedLocals": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": ["./src"]
}
